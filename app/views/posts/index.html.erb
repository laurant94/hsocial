<div class="row text-center">
  <div class="col-sm-12">
    <h2 class="">Mes publications</h2>
  </div>
</div>

<div class="row text-right">
  <div class="col-sm-12">
    <a href="<%=new_post_path%>" class="btn btn-primary btn-sm">Ajouter</a>
  </div>
</div>

<%if flash[:success]%>
  <div class="alert-success alert">  <%=flash[:success]%> </div>
<%end%>

<%if flash[:error]%>
  <div class="alert-danger alert">  <%=flash[:error]%> </div>
<%end%>

<div class="row">
  <% if @posts.blank? %>
    <div class="alert alert-warning">
      <p>
        Vous avez aucune publication pour le moment. 
        <a href="<%=new_post_path%>">Clicker ici</a> pour créer votre première publication
      </p>
    </div>
  <%end%>
  <% @posts.each do |p| %>
    <div class="col-sm-6 col-md-4">
      <div class="card" style="margin-top:20px;">
        <img class="card-img-top" />
        <div class="card-body">
          <p class="card-text"><%=p.content%></p>
          <a href="<%=post_path(p.id)%>" class="card-link">Lire la suite</a> <br>
          <div class="row">
            <div class="col-sm-6">
              <a href="<%=edit_post_path(p.id)%>" class="card-ink">Editer</a>
            </div>
            <div class="col-sm-6">
              <a href="<%= post_path(p.id)%>" data-confirm="Voulez-vous réèlement supprimer cette publiction?" data-method="DELETE" class="card-link text-danger">Supprimer</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>